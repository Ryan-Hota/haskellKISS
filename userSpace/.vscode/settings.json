{
    "haskell.hlint.executablePath": "C:\\haskellKISSExecutables\\hlint",

    // haskell extension pack
    "haskell.manageHLS": "GHCup",

    // code runner
    "code-runner.saveFileBeforeRun":true,
    "code-runner.runInTerminal": true,
    "code-runner.fileDirectoryAsCwd":true,
    "code-runner.executorMap": {"haskell":"haskellKISS \"$fileName\" loadGHCiInShell\n:load \"$fileName\""},  
    "code-runner.customCommand": "cls\nrunghc \"$fileName\"",
    "code-runner.enableAppInsights": false,

    // vscode
    "editor.acceptSuggestionOnEnter": "off"
}